<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Main.AppMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="操作栏" />

        <Button
            android:id="@+id/activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Activity" />

        <Button
            android:id="@+id/alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Alarm" />

        <Button
            android:id="@+id/alertDialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Alert Dialogs" />

        <Button
            android:id="@+id/device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="device admin" />

        <Button
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Fragment" />

        <Button
            android:id="@+id/launcger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="launcger Shortcuts" />

        <Button
            android:id="@+id/loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Loader" />

        <Button
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Menu" />

        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="nofitication" />

        <Button
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="print" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="search" />

        <Button
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Service" />

        <Button
            android:id="@+id/texttospeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="Text To Speech" />

        <Button
            android:id="@+id/voicerereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="VoiceRecognition" />

        <Button
            android:id="@+id/fragmentTopTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#44ffffff"
            android:text="顶部导航栏" />
    </LinearLayout>
</ScrollView>