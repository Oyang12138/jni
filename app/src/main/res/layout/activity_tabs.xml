<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.Tabs">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/ic_baseline_person_add_alt_1_24"
            android:text="tab1" />

        <TextView
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:backgroundTint="@color/teal_200"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_timer_24"
            android:layout_weight="1"
            android:text="tab2" />

        <TextView
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_3d_rotation_24"
            android:text="tab3"
            android:backgroundTint="@color/teal_200"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:backgroundTint="@color/teal_200"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_brightness_4_24"
            android:text="tab4" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#44dddddd"
        android:layout_below="@+id/lin"></View>

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view">


    </FrameLayout>
</RelativeLayout>