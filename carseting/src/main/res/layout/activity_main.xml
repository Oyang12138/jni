<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="120px"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/close"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18.5dp"
            android:layout_marginRight="93dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"/>

        <LinearLayout
            android:id="@+id/close1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/close"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="62dp"
            android:layout_marginRight="50.5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21.5dp"
                android:backgroundTint="#626262"
                android:src="@drawable/ic_baseline_highlight_24" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="灯光"

                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/close2"
            android:layout_below="@+id/close1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50.5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21.5dp"
                android:backgroundTint="#626262"
                android:src="@drawable/ic_baseline_highlight_24" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:text="灯光"
                android:textColor="#ff626262"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/close3"
            android:layout_below="@+id/close2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50.5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21.5dp"
                android:backgroundTint="#626262"
                android:src="@drawable/ic_baseline_highlight_24" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:text="灯光"
                android:textColor="#ff626262"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/close4"
            android:layout_below="@+id/close3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="50.5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21.5dp"
                android:backgroundTint="#626262"
                android:src="@drawable/ic_baseline_highlight_24" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:text="灯光"
                android:textColor="#ff626262"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0"/>

    <RelativeLayout
        android:id="@+id/rigth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="68dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:text="语言设置"
                android:textColor="#ff000000"
                android:textSize="14sp"
                />


        </LinearLayout>

    </RelativeLayout>
    <CheckBox
        android:id="@+id/orag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:text="@string/app_name"/>
</LinearLayout>